<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aulasemcasa.nac01.SobreActivity"

    android:id="@+id/activity_sobre"

    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"

    android:background="@color/background_splash"
    >

    <include layout="@layout/footer_menu_principal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/footer"
        android:gravity="center">

        <TextView
            android:text="Godesses Slot Machine"

            android:id="@+id/tvNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            />

        <ImageView
            android:layout_centerHorizontal="true"

            android:layout_below="@+id/tvNome"

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/ivLogo"

            android:background="@drawable/hyrulecrest"
            />

        <TextView
            android:text="VersÃ£o 1.0"

            android:layout_below="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:id="@+id/tvVersao"
            />

        <Button

            android:layout_below="@+id/tvVersao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btPerfil"
            android:onClick="menuPrincipal"
            android:text="Voltar"/>

    </RelativeLayout>

</RelativeLayout>
